<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/sokoimageView"
            android:layout_width="197dp"
            android:layout_height="237dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/clipart46977169" />



        <TextView
            android:id="@+id/myItemSokoexpe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="140dp"
            android:text="Expected exchange"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:ems="10" />

        <TextView
            android:id="@+id/myItemsSokotype"
            android:layout_width="74dp"
            android:layout_height="39dp"
            android:text="Type"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/myItemSokodesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="80dp"
            android:text="Description"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:ems="10"
            android:gravity="start|top"
            />

        <TextView
            android:id="@+id/sokocontactexchange"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="200dp"
            android:text="contact"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>